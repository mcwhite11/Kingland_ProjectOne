@{
    //Grab our fields form the form
    var user = Request.Form["thisUser"];  
    var specInstall = Request.Form["specialInstall"];
    var pcReq = Request.Form["pcRequirement"];
    var deskLoc = Request.Form["deskLocation"];
    var netPort = Request.Form["assignedNetworkPort"];
    var permission = Request.Form["userPermission"];
    var mks = Request.Form["mks"];

    //Open and connect to DB
    var db = Database.Open("kinglandDatabase");
    
    //Update hm info table 
    db.QuerySingle("UPDATE hmForm SET specInstall = @0, pcReq = @1, deskLoc = @2, netPort = @3, permission = @4, mks = @5 WHERE user = @6", specInstall, pcReq, deskLoc, netPort, permission, mks, user);
    
    //Update form info table
    db.QuerySingle("UPDATE forminfo SET hmComplete = '1' WHERE user = @0", user);

    //Head to Check status
	Response.Redirect("checkStatus.cshtml?user="+@user); 
}
