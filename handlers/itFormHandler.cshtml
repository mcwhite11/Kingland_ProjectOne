@{
    //Grab our variables from HR Form
    var thisUser = Request.Form["myUser"];

    var first = Request.Form["first"];
    var last = Request.Form["last"];
    var email = Request.Form["email"];
    var hmemail = Request.Form["hmemail"];
    var prefName = Request.Form["prefName"];
    var position = Request.Form["position"];
    var dept = Request.Form["dept"];
    var actSD = Request.Form["actSD"];
    var hm = Request.Form["hm"];
    
    //Grab variables from HM Form
    var specialInstall = Request.Form["specialInstall"];
    var pcRequirement = Request.Form["pcRequirement"];
    var deskLocation = Request.Form["deskLocation"];
    var assignedNetworkPort = Request.Form["assignedNetworkPort"];
    var userPermission = Request.Form["userPermission"];
    var mks = Request.Form["mks"];

    //Connect and open the database
    var db = Database.Open("kinglandDatabase");
    
    
    //Update hr info table 
    db.QuerySingle("UPDATE users SET first = @0, last = @1, email = @2, hmemail= @3, prefName = @4, position = @5, dept = @6, startDate = @7, hmName = @8 WHERE user = @9", first, last, email, hmemail, prefName, position, dept, actSD, hm, thisUser);

    //Update hm info table
    db.QuerySingle("UPDATE hmForm SET specInstall = @0, pcReq = @1, deskLoc= @2, netPort= @3, permission = @4, mks = @5 WHERE user = @6", specialInstall, pcRequirement, deskLocation, assignedNetworkPort, userPermission, mks, thisUser);
    
    //Head to message
	Response.Redirect("../cpanel.cshtml?page=formSuccess"); 
}
